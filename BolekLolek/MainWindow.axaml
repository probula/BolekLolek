<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BolekLolek.MainWindow"
        Title="BolekLolek">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Grid>
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                        
                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Nazwa zadania: " Margin="5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Height="30" Margin="5" x:Name="nazwaZadania"/>
                                
                                <TextBlock Grid.Column="0" Grid.Row="2" Text="Kto ma wykonać zadanie:" Margin="5"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Margin="5" x:Name="wykonawcaComboBox">
                                        <ComboBoxItem Content="Bolek"/>
                                        <ComboBoxItem Content="Lolek"/>
                                </ComboBox>
                                
                                
                                <TextBlock Grid.Column="0" Grid.Row="3" Text="Priorytet" Margin="5"/>
                                
                                <TextBlock Grid.Column="0" Grid.Row="5" Text="niski (łatwe)" Margin="5"/>
                                <RadioButton Grid.Column="1" Grid.Row="5" GroupName="Priorytet" Margin="5" x:Name="rb1"/>
                                
                                <TextBlock Grid.Column="0" Grid.Row="6" Text="normalny (zwyłe)" Margin="5"/>
                                <RadioButton Grid.Column="1" Grid.Row="6" GroupName="Priorytet" Margin="5" x:Name="rb2"/>
                                
                                <TextBlock Grid.Column="0" Grid.Row="7" Text="wysoki (trudne)" Margin="5"/>
                                <RadioButton Grid.Column="1" Grid.Row="7" GroupName="Priorytet" Margin="5" x:Name="rb3"/>
                                
                                <TextBlock Grid.Row="8" Grid.Column="0" Text="Opis zadania" Margin="5"/>
                                
                                <TextBlock Grid.Row="9" Grid.Column="0" Text="Na dworze" Margin="5"/>
                                <CheckBox Grid.Row="9" Grid.Column="1" Margin="5" x:Name="NaDworze"/>
                                
                                <TextBlock Grid.Row="10" Grid.Column="0" Text="Potrzebny sprzęt" Margin="5"/>
                                <CheckBox Grid.Row="10" Grid.Column="1" Margin="5" x:Name="Sprzet"/>
                                
                                <TextBlock Grid.Row="11" Grid.Column="0" Text="Z udziałem innych kolegów" Margin="5"/>
                                <CheckBox Grid.Row="11" Grid.Column="1" Margin="5" x:Name="Koledzy"/>
                                
                                <TextBlock Grid.Row="12" Grid.Column="0" Text="Przypisz date do zadania:" Margin="5"/>
                                <Calendar Grid.Row="12" Grid.Column="1" x:Name="calendar" SelectionMode="SingleDate" SelectedDatesChanged="kalendarzData"/>
                                
                                <ListBox Grid.Row="13" Grid.Column="1" Margin="5" x:Name="zadanieLista"></ListBox>
                                
                                <Image Grid.Row="13" Grid.Column="0" x:Name="wykonawcaZdj" Width="100" Height="100"/>
                                        
                                <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="14" Content="Dodaj" HorizontalAlignment="Center" x:Name="zadanieButton"/>
                                
                                <TextBlock Grid.Row="15" Grid.Column="0" Text="Wybierz date, dla którego wyświetlisz zadania: " Margin="5"/>
                                <Calendar Grid.Row="15" Grid.Column="1" x:Name="calendar2" SelectionMode="SingleDate"/>
                                <Button Grid.Column="0" Grid.Row="16" Content="Pokaż" HorizontalAlignment="Center" x:Name="noweOkno"/>
                        </Grid>
                </StackPanel>
        </ScrollViewer>
</Window>
